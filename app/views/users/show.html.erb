<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
             <%= link_to gravatar_for(@user, size: 100), @user %>
            <h1><%= @user.name %></h1>
            <span><%= pluralize(@user.posts.count, "投稿") %></span>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.posts.any? %>
      <h3>投稿 (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
    <% end %>
  </div>
</div>
